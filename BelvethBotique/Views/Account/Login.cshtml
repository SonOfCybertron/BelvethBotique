@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: hidden;">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold" style="color: #DC143C;">BELVETH</h3>
                        <p class="text-muted small">Sign in to your account</p>
                    </div>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger small py-2 text-center mb-3">
                                @ViewBag.Error
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label small text-muted fw-bold">USERNAME</label>
                            <input type="text" name="username" class="form-control form-control-lg" required placeholder="Username">
                        </div>

                        <div class="mb-4">
                            <label class="form-label small text-muted fw-bold">PASSWORD</label>
                            <input type="password" name="password" class="form-control form-control-lg" required placeholder="Password">
                        </div>

                        <button type="submit" class="btn w-100 py-2" style="background-color: #DC143C; color: white; font-weight: 600;">
                            SIGN IN
                        </button>
                    }

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Register", "Account")" class="text-decoration-none small" style="color: #DC143C;">
                            <i class="bi bi-arrow-right"></i> Join the Coven (Create Account)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
