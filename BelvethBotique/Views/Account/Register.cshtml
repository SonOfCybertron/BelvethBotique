@model BelvethBotique.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: hidden;">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold" style="color: #DC143C;">BELVETH</h3>
                        <p class="text-muted small">Join the Coven</p>
                    </div>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger small py-2 text-center mb-3">
                                @ViewBag.Error
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label small text-muted fw-bold">USERNAME</label>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", placeholder = "Choose a unique username", required = "required" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label small text-muted fw-bold">EMAIL</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", type = "email", placeholder = "name@example.com", required = "required" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label small text-muted fw-bold">PASSWORD</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "Password", required = "required" })
                        </div>

                        <button type="submit" class="btn w-100 py-2" style="background-color: #DC143C; color: white; font-weight: 600;">
                            CREATE ACCOUNT
                        </button>
                    }

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none small" style="color: #DC143C;">
                            <i class="bi bi-arrow-right"></i> Already have an account? Sign In
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
