@model BelvethBotique.Models.Product
@{
    ViewBag.Title = "Add New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Add New Product</h2>
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Please fix the following errors:</strong>
            @Html.ValidationSummary(false, "", new { @class = "mt-2" })
        </div>
    }

    @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row g-4">
            <div class="col-md-6">
   
                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

  
                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>

   
                <div class="mb-3">
                    @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "e.g. 49.99" } })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>

    
                <div class="mb-3">
                    @Html.LabelFor(m => m.Category, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.Category,
                        new SelectList(new[] { "Dresses", "Shoes", "Accessories" }),
                        "-- Select Category --",
                        new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3 form-check">
                    @Html.CheckBoxFor(m => m.IsFeatured, new { @class = "form-check-input" })
                    @Html.LabelFor(m => m.IsFeatured, "Featured", new { @class = "form-check-label" })
                </div>
            </div>

 
            <div class="col-md-6">
                <div class="card p-3">
                    <h5>Product Image</h5>
                    <div class="mt-3">
                        <input type="file"
                               name="imageFile"
                               class="form-control"
                               accept="image/*"
                               onchange="previewImage(event)" />
                        @Html.ValidationMessage("imageFile", "", new { @class = "text-danger" })
                    </div>

 
                    <div class="mt-3">
                        <img id="imgPreview"
                             src="https://placehold.co/300x300/f0f0f0/999?text=No+Image"
                             class="img-fluid rounded"
                             style="max-height: 300px; object-fit: cover; width: 100%;" />
                    </div>
                </div>
            </div>


            <div class="col-12">
                <button type="submit" class="btn btn-outline-dark px-4 py-2">Add Product</button>
                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </div>
    }
</div>

<script>
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
            document.getElementById('imgPreview').src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
