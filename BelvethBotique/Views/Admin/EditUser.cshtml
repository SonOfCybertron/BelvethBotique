@model BelvethBotique.Models.User
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Edit User</h2>
        <a href="@Url.Action("UserAcc", "Admin")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to User Accounts
        </a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Please fix the following errors:</strong>
            @Html.ValidationSummary(false, "", new { @class = "mt-2" })
        </div>
    }

    @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UserId)

        <div class="row g-4">
            <div class="col-md-6">

                <div class="mb-3">
                    @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <select name="Role" class="form-select">
                        <option value="User" @(Model.Role == "User" ? "selected" : "")>User</option>
                        <option value="Admin" @(Model.Role == "Admin" ? "selected" : "")>Admin</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">New Password (Optional)</label>
                    <input type="password" name="newPassword" class="form-control" placeholder="Leave blank to keep current password" />
                </div>

            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-outline-dark px-4 py-2">Save Changes</button>
                <a href="@Url.Action("UserAcc", "Admin")" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </div>
    }
</div>
