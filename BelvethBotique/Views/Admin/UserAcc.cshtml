@model IEnumerable<BelvethBotique.Models.User>
@{
    ViewBag.Title = "User Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Accounts</h2>

        <div class="d-flex gap-2">
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-dark">
                <i class="bi bi-box"></i> Inventory
            </a>

            <a href="@Url.Action("UserCart", "Admin")" class="btn btn-dark">
                <i class="bi bi-cart"></i> User Cart
            </a>

            <a href="@Url.Action("UserAcc", "Admin")" class="btn btn-dark">
                <i class="bi bi-people"></i> User Accounts
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-people fs-1 mb-2"></i>
            <p>No registered users yet.</p>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>User ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th style="width:150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-dark">User</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a href="@Url.Action("EditUser", new { id = user.UserId })"
                                           class="btn btn-sm btn-outline-dark">Edit</a>

                                        <a href="@Url.Action("DeleteUser", new { id = user.UserId })"
                                           class="btn btn-sm btn-dark"
                                           onclick="return confirm('Delete this user?');">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
