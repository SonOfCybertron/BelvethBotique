@model IEnumerable<BelvethBotique.Models.Product>
@{
    ViewBag.Title = "Home";
}

<div class="hero-section" style="background-image: url('/Content/Images/header.jpg'); background-size: cover; background-position: center;">
    <div class="hero-overlay"></div>
    <div class="hero-content text-center">
        <h1 class="display-4 fw-bold text-white">NEW ARRIVALS</h1>
        <p class="lead text-white mb-4">Discover the latest in dark elegance</p>
        <a href="@Url.Action("Shop", "Home")" class="btn btn-light px-4 py-2 fw-bold" style="color: var(--z-red); border: 2px solid white;">SHOP NOW</a>
    </div>
</div>

<div class="container my-5">

    <h3 class="text-center mb-4" style="color: var(--z-red);">FEATURED PRODUCTS</h3>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="product-card h-100">


                    <img src="@Url.Action("GetImage", "Home", new { id = item.ProductId, t = DateTime.Now.Ticks })"
                         class="product-img w-100"
                         alt="@item.Name"
                         onerror="this.src='https://placehold.co/300x400/f0f0f0/999?text=No+Image'">


                    <div class="p-3">
                        <h6 class="mb-1">@item.Name</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="product-price">$@item.Price</span>
                            <a href="@Url.Action("Details", "Home", new { id = item.ProductId })" class="text-muted small">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
